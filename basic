#2 - data.table(name_of_column_1 = elements,name_of_column_2 = elements, ..., 
# name_of_column_n = elements)

DT = data.table( 
ID = c("b","b","b","a","a","c"), 
a = 1:6, 
b = 7:12, 
c = 13:18 
) 
DT 

> DT 
   ID a  b  c
1:  b 1  7 13
2:  b 2  8 14
3:  b 3  9 15
4:  a 4 10 16
5:  a 5 11 17
6:  c 6 12 18


